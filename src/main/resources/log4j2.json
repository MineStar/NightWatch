{
	"configuration": {
		"status": "info", "name": "nightwatch",
		"appenders": {
			"Console": {
				"name": "Console",
				"target": "SYSTEM_OUT",
				"PatternLayout": {"pattern":"%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] [%-5level] [%logger{36}]: %msg%n"}
			},
			"File": {
				"name": "File",
				"fileName": "nightwatch.log",
				"PatternLayout": {"pattern":"%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] [%-5level] [%logger{36}]: %msg%n"}
			}
		},
		"loggers": {
			"root": {
				"level": "info",
				"appender-ref": [{"ref": "Console"},{"ref": "File"}]
			}
		}
	}
}